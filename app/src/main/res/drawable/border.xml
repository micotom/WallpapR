<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/icons"
                android:centerColor="@color/primary_light"
                android:endColor="@color/icons"
                android:angle="135"
                />
        </shape>
    </item>
    <item
        android:top="3dp"
        android:bottom="3dp"
        >
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/icons"
                android:width="25dp"
                />
            <padding
                android:top="100dp"
                />
        </shape>
    </item>

</layer-list>